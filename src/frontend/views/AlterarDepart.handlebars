<head>
    <title>Alterar Departamentos</title>
    <link rel="stylesheet" href="/css/StylesInput.css">
</head>

<body>
    <h1 class="lead text-center" style="font-size: 40px;">ALTERAÇÃO DE DEPARTAMENTOS</h1>
    <form action="/departamentos/attDepart" method="POST" class="form px-4">
        <div class="mt-3">
            <!--ID DEPARTAMENTO-->
            <label for="idDepart" class="lead">ID do Departamento:</label>
            <input type="number" name="idDepart" id="idDepart" value="{{idDepart}}"
                class="form-control backForm ml-auto">
            <!--NOME-->
            <label for="nomeDepart" class="lead mt-4">Nome do departamento</label>
            <input type="text" name="nomeDepart" id="nomeDepart" placeholder="*Novo Nome do departamento"
                class="form-control backForm ml-auto" value="{{nomeDepart}}">
        </div>

        <!-- BOTOES --->
        <input class="btn btn-success mx-auto mt-3 col-12" type="submit" value="ALTERAR">
    </form>

    <form action="/departamentos/dellDepart" method="POST" class="mt-2 ml-4">
        <input type="hidden" name="idDepart" value="{{idDepart}}">
        <input type="submit" class="text-light btn btn-danger" value="DELETAR DEPARTAMENTO">
    </form>

    <div class="text-center"> <a href="/" class="mt-4" style="font-size: 25px;">VOLTAR</a> </div>    
</body>