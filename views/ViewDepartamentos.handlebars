<head>
	<title>Acesso aos Departamentos</title>
	<link rel="stylesheet" href="/css/StylesInput.css">
</head>

<body>
	<div id="success" class="d-none">SUCESSO</div>
	<div id="divBody">
		<div id="divEscolha"
			class="mx-auto border border-secondary rounded col-md-6 col-11 my-5 shadow-lg py-4 animated fadeInDown"
			role="alert" style="background-color: rgb(255, 255, 255, 0.2);">
			<h1 class="display-4 lead text-center">O que deseja fazer ?</h1>

			<div class="row mt-5">
				<div class="mr-auto ml-2">
					<a href="/alterarDepart" class="btn btn-outline-light btn-md" >ALTERAR/ATUALIZAR DEPARTAMENTO</a>
				</div>
				<form method="GET" action="/departamentos" class="ml-auto mr-2">
					<input type="submit" class="btn btn-outline-light btn-md" value="CONSULTAR DEPARTAMENTOS">
				</form>
			</div>
			<div class="mt-3 col-6 mx-auto">
				<form id="cad" method="POST" action="/escolha">
					<input type="submit" class="btn btn-outline-success btn-lg" value="CADASTRAR DEPARTAMENTO">
				</form>
			</div>
		</div>

		<div id="divCad"
			class="d-none p-2 mx-auto border border-secondary rounded col-md-6 col-11 my-5 shadow-lg py-4 animated fadeInDown"
			role="alert" style="background-color: rgb(255, 255, 255, 0.2);">
			<h1 class="lead text-center" style="font-size: 40px;">CADASTRO DE DEPARTAMENTOS</h1>
			<form action="/departamentos" method="POST" class="form px-4">
				<!--NOME-->
				<input type="text" name="nomeDepart" id="nome" placeholder="*Nome do departamento"
					class="form-control backForm mx-auto mt-4">
				<div class="d-none" id="nomeInvalido" name="nomeInvalido">Por favor, informe o nome do departamento!
				</div>

				<!-- BOTOES --->
				<input name="cadastrar" class="btn btn-success mx-auto mt-4" type="submit" value="Cadastrar">
			</form>

			<div class="text-center"> <a href="/viewDepartamentos" class="mt-4" style="font-size: 25px;">VOLTAR</a>
			</div>
		</div>
	</div>

	<script src="/jquery/dist/jquery.min.js"> </script>
</body>